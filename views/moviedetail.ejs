<script>

function usercheck(){
	if( $("#user").val() === "undefined" ){
		alert("로그인을 해야 이용할 수 있는 서비스 입니다.");
		return false;
	}
	else {
		return true;
	}
	return true;
}

function vailduser(){
	if( !usercheck() ) {
		return false;
	}
	else{
		//var review = <%-JSON.stringify(review)%>;
	}

	var pass = prompt("비밀번호를 입력하세요.","여기가 비밀번호를 입력하는 text box입니다");
