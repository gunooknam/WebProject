			 allowfullscreen></iframe>
		</div>
	</section>


	<div class="review" style="margin-left:2%">
		<div class="row" style="margin-top:30px; width:120%">
			<div class="col-md-5">
	    	<div class="well well-sm" style="background-color:black">
	            <div class="text-right">
	                <a class="btn default" id="open-review-box" style="color:white">영화 리뷰남기기</a>
									<% if( typeof message !== "undefined") { %>
											<div class="alert alert-danger" style="margin-bottom: 10px" style="height:20px" ><%= message %></div>
									<% } %>
	            </div>
	            <div class="row" id="post-review-box" style="display:none;">
	                <div class="col-md-12">
	                    <form accept-charset="UTF-8" action="/moviedetail/review" method="post">
													<input id="movieId" name="movieId" style="display:none" value="<%= rows[0].id %>">
	                        <input id="ratings-hidden" name="rating" type="hidden" value="1">
	                        <input class="form-control animated" cols="50" id="new-review" name="comment" placeholder="평점과 리뷰를 적어주세요" rows="5" required>
	                        <div class="text-right">
	                            <div class="stars starrr" data-rating="1" ></div>
															<input class="form-control animated" cols="50" id="new-review" name="reviewpasswd" type="password" placeholder="비밀번호" rows="5" required><hr>
															<button class="btn " type="submit" style="color:white" onclick="return usercheck();">리뷰 등록</button>
	                            <button class="btn " href="#" id="close-review-box" style="display:none; color:white; background-color: black;">
	                            취소</button>
	                        </div>
	                    </form>
	                </div>
	            </div>
	        </div>
			</div>
			<div class="col-md-7">
				 <% if( typeof review !=="undefined") {
					 		var start=0;
					 		var i=start;
							for(	i=start; i<review.length; i++)
							{
								var onecomment = review[i];
								var time = review[i].date.toLocaleString();
					%>
				<div class="well " style="background-color:black">
						<div style="color:white">
							<%= onecomment.review %><div class=" starrr" data-rating="<%= onecomment.star %>"> </div>
							<br>
							<form action="/moviedetail/review/delete" method="post" >
								<input id="replymovieId" name="replymovieId" style="display:none" value="<%= onecomment.movieId %>">
								<input id="replyauthId" name="replyauthId" style="display:none" value="<%= onecomment.authId %>">
								<input id="replypasswd" name="replypasswd" style="display:none" value="<%= onecomment.passwd %>">
								<span><%= onecomment.nickname %>  |  <%= time %> <button class="btn " type="submit" style="color:white ;float:right" onclick="return vailduser();">리뷰삭제</button></span>
							</form>
					 		<hr>
				 	 </div>
				</div>
				  	<%
								}
						%>
						<ul class="pager" style="float:right">
						  <li><a href="#" onclick=prev()>Previous</a></li>
						  <li><a href="#" onclick=next()>Next</a></li>
						</ul>
					 <%
						}
				 		%>
			</div>
		</div>
	</div>
